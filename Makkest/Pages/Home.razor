@code
{
    private static readonly TimeZoneInfo FinnishTime = TimeZoneInfo.FindSystemTimeZoneById("Europe/Helsinki");

    private static readonly DateTimeOffset StartDate = new(2019, 7, 1, 1, 0, 0,
        FinnishTime.BaseUtcOffset);

    private int YearsOfExperience => CalculateExperience();

    private int CalculateExperience()
    {
        DateTimeOffset now = TimeZoneInfo.ConvertTimeFromUtc(DateTimeOffset.Now.DateTime, FinnishTime);
        return (int)System.Math.Round((now - StartDate).Days / 365d, MidpointRounding.ToZero);
    }
}
